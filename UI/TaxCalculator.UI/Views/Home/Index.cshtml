@model TaxCalculator.UI.Models.TaxCalculateViewModel
@{
    ViewData["Title"] = "Calculate";
}
<h1>Calculate</h1>
<fieldset>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label asp-for="PostalCodes" class="col-md4- control-label"></label>
                <div class="col-md-4">
                    @Html.DropDownListFor(m => m.SelectedPostalCodeId,
                                           new SelectList(Model.PostalCodes.Select(x => new { Value = x.Id, Text = x.PostCode }), "Value", "Text"), "Select a postal code",
                                            new { @class = "form-control border-input" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TaxableIncome" class="control-label col-md-4"></label>
                <div class="col-md-4">
                    <input asp-for="TaxableIncome" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Calculate" class="btn btn-default" />
                    <input type="reset" name="name" value="Reset" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
</fieldset>

